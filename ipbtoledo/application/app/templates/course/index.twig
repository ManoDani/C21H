{% extends "layout.twig" %}
{% block html_title %}Cursos - {{ parent() }}{% endblock %}
{% set nav_active = 'courses' %}
{% set header_type = 'courses' %}
{% block content -%}

<div id="banner-cursos">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
      </div>
    </div>
  </div>
</div>

<div id="cursos">

  <div class="container">
    <div class="row">
      <div class="page-header">
        <h1>Cursos</h1>
      </div>
    </div>
    <div class="row lista-cursos">
        {% for course in courses if course.status %}
        <div class="col-xs-12 col-sm-12 col-md-offset-2 col-md-8">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">
                {{ course.title }}
              </h3>
            </div>
            <div class="panel-body">
              {% if course.image is not empty %}
              <div class="col-xs-5">
                <img class="img-responsive" src="{{ course.image }}">
              </div>
              <div class="col-xs-6">
              {% endif %}
                <p>{{ course.description }}</p>
                <a class="btn btn-info" href="{{ base_url() }}/course/{{ course.id }}">
                  Mais informações
                </a>
              {{ course.image is not empty ? '</div>' }}
            </div>
          </div>
        </div>
        {% else %}
        <div class="jumbotron">
          <h2>Aguenta aí!</h2>
          <p>Em breve teremos novos cursos para você.</p>
        </div>
        {% endfor %}
    </div>
  </div>
</div>

{%- endblock %}

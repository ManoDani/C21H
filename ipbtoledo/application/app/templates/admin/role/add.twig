{% extends "admin/layout.twig" %}
{% block html_title %}Cargos - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'role' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li><a href="{{ base_url() }}/admin/role">Cargos</a></li>
  <li class="active">Adicionar</li>
</ol>
{% endblock %}
{% block content %}

<div class="page-header">
  <h1>Adicionar cargo</h1>
</div>

<div class="row">
  <div class="col-md-6">
    <form role="form" data-toggle="validator" action="{{ base_url() }}/admin/role/add" method="POST">
      <input class="form-control form-group" type="text" name="name" placeholder="Slug" pattern="[a-z]{1,}" title="Somente letras minúsculas" autofocus required>
      <input class="form-control form-group" type="text" name="description" placeholder="Nome" required>
      <input class="form-control form-group" type="number" name="access_level" placeholder="Nível de acesso" required>
      <button type="submit" class="btn btn-success">Adicionar</button>
    </form>
  </div>
</div>

{% endblock %}
{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
{% endblock %}

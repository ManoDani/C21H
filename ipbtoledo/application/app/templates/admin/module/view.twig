{% extends "admin/layout.twig" %}
{% block html_title %}Cursos - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'courses' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li><a href="{{ base_url() }}/admin/courses">Cursos</a></li>
  <li><a href="{{ base_url() }}/admin/courses/{{ module.course_id }}">{{ module.course_title }}</a></li>
  <li class="active">{{ module.title }}</li>
</ol>
{% endblock %}
{% block content %}

<div class="page-header">
  <div class="pull-right">
    <a class="btn btn-primary" href="{{ base_url() }}/admin/modules/edit/{{ module.id }}">
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
    <a class="btn btn-danger" href="{{ base_url() }}/admin/modules/delete/{{ module.id }}">
      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    </a>
  </div>
  <h1>{{ module.number }}. {{ module.title }}</h1>
</div>

<div class="well">{{ module.description }}</div>

<p class="text-right">
  <a class="btn btn-xs btn-success" href="{{ base_url() }}/admin/levels/add?module={{ module.id }}">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Adicionar nível
  </a>
</p>
{% if levels %}
<ol class="list-group">
  {% for level in levels %}
  <li class="list-group-item">
    {{ module.number }}.{{ level.number }}.
    <a href="{{ base_url() }}/admin/levels/{{ level.id }}">{{ level.title }}</a>
    <div class="pull-right">
      <a class="btn btn-xs btn-default" href="{{ base_url() }}/admin/levels/edit/{{ level.id }}/up">
        <span class="glyphicon glyphicon-menu-up" aria-hidden="true"></span>
      </a>
      <a class="btn btn-xs btn-default" href="{{ base_url() }}/admin/levels/edit/{{ level.id }}/down">
        <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span>
      </a>
      <a class="btn btn-xs btn-primary" href="{{ base_url() }}/admin/levels/edit/{{ level.id }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      </a>
      <a class="btn btn-xs btn-danger" href="{{ base_url() }}/admin/levels/delete/{{ level.id }}">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
      </a>
    </div>
  </li>
  {% endfor %}
</ol>
{% else %}
<div class="alert alert-danger" role="alert">Não existem níveis cadastrados</div>
{% endif %}

{% endblock %}

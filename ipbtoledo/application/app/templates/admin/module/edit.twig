{% extends "admin/layout.twig" %}
{% block html_title %}Cursos - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'courses' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li><a href="{{ base_url() }}/admin/courses">Cursos</a></li>
  <li><a href="{{ base_url() }}/admin/courses/{{ module.course_id }}">{{ module.course_title }}</a></li>
  <li><a href="{{ base_url() }}/admin/modules/{{ module.id }}">{{ module.title }}</a></li>
  <li class="active">Editar</li>
</ol>
{% endblock %}
{% block content %}

<div class="page-header">
  <h1>Editar módulo</h1>
</div>

<form role="form" data-toggle="validator" action="{{ base_url() }}/admin/modules/update" method="POST">
  <input type="hidden" name="id" value="{{ module.id }}">
  <input type="hidden" name="number" value="{{ module.number }}">
  <input class="form-control form-group" type="text" name="title" value="{{ module.title }}" autofocus required>
  <input class="form-control form-group" type="text" name="description" value="{{ module.description }}" required>
  <select class="form-control form-group" name="course_id">
    {% for course in courses %}
    <option {% if course.id == module.course_id %}selected {% endif %}value="{{ course.id }}">{{ course.title }}</option>
    {% endfor %}
  </select>
  <button type="submit" class="btn btn-primary">Atualizar</button>
</form>

{% endblock %}
{% block javascripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
{% endblock %}

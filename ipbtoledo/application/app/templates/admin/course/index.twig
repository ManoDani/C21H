{% extends "admin/layout.twig" %}
{% block html_title %}Cursos - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'courses' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li class="active">Cursos</li>
</ol>
{% endblock %}
{% block content %}
<div id="admin-curses">
  <div class="page-header">
    <p class="pull-right"><a class="btn btn-success" href="{{ base_url() }}/admin/courses/add">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a></p>
    <h1>Cursos</h1>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10">
        {% for course in courses %}
        <div class="panel panel-default ">
          <div class="panel-heading">
            <div class="pull-right">
              <a class="btn btn-xs btn-primary" href="{{ base_url() }}/admin/courses/edit/{{ course.id }}">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              </a>
              <a class="btn btn-xs btn-danger" href="{{ base_url() }}/admin/courses/delete/{{ course.id }}">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
              </a>
            </div>
            <h3 class="panel-title">
              <a href="{{ base_url() }}/admin/courses/{{ course.id }}">{{ course.title }}</a>
            </h3>
          </div>
          <div class="panel-body">

            {% if course.image is not empty %}
            <div class="col-md-4">
              <img class="img-responsive" src="{{ base_url() }}/{{ course.image }}">
            </div>
            <div class="col-md-6">
               <p>{{ course.description }}</p>
            </div>
            {% else %}
            <div class="col-md-10">
               <p>{{ course.description }}</p>
            </div>
            {% endif %}
            <div class="col-md-2">
              {% if course.status %}
              <div class="row">
                <div class="col-xs-12">
                  <p><a href="{{ base_url() }}/admin/courses/{{ course.id }}/disable" class="btn btn-default btn-block">
                    Despublicar
                  </a></p>
                </div>
              </div>
              {% else %}
              <div class="row">
                <div class="col-xs-12">
                  <p><a href="{{ base_url() }}/admin/courses/{{ course.id }}/enable" class="btn btn-success btn-block">
                    Publicar
                  </a></p>
                </div>
              </div>
              {% endif %} </a>
              <div class="row">
              <div class="col-xs-12">
                <p><a class="btn btn-info btn-block" href="{{ base_url() }}/admin/courses/{{ course.id }}">
                  Abrir
                </a>
                </p>
              </div>
            </div>
            </div>
          </div>
        </div>
        {% else %}
        <div class="alert alert-danger" role="alert">Não existem cursos cadastrados</div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% endblock %}

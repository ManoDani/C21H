{% extends "admin/layout.twig" %}
{% block html_title %}Pedidos - Administração - {{ parent() }}{% endblock %}
{% set nav_active = 'orders' %}
{% block breadcrumbs %}
<ol class="breadcrumb">
  <li><a href="{{ base_url() }}/admin">Início</a></li>
  <li class="active">Pedidos</li>
</ol>
{% endblock %}
{% block content %}

<div class="order">
  <div class="page-header">
    <h1>Pedidos</h1>
  </div>

  {% if orders %}
  <table class="table table-hover data-table">
    <thead>
      <tr>
        <th>Código do Pedido</th>
        <th>Usuário</th>
        <th>Curso</th>
        <th>Preço</th>
        <th>Código da Transação</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      {% for order in orders %}
      <tr>
        <td>{{ order.reference }}</td>
        <td>
          <a href="{{ base_url() }}/admin/user/{{ order.user_id }}">
            {{ order.user_name }}
          </a>
        </td>
        <td>
          <a href="{{ base_url() }}/admin/courses/{{ order.course_id }}">
            {{ order.course_name }}
          </a>
        </td>
        <td>{{ order.amount }}</td>
        <td>{{ order.transaction }}</td>
        <td>{{ order.status }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  {% else %}
  <div class="alert alert-danger" role="alert">Não existem pedidos</div>
  {% endif %}
</div>


{% endblock %}

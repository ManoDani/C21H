{% extends "layout.twig" %}
{% set nav_active = 'index' %}
{% set header_type = 'index' %}
{% block content -%}

<div id="index-content" style="background-color: #333;" >

  <div id="banner-index" class="container-fluid " style="margin: 0px; padding: 0px;">

    <div id="carousel-example-generic" class="carousel slide hidden-xs" data-ride="carousel" style="height:100%;">

      <div style="position:absolute; left:0px; z-index:200;">
        <div class="visible-xs">
          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#horarioModal" style="
          border-color: rgba(204, 204, 204, 0.33);
          margin-top:3px;
          left:0px;
          margin-left:3px;">
          <span class="glyphicon glyphicon-time" style=" font-size: 20px;"></span>
          </button>
        </div>

        <div style="width:270px; height:70vh; position:relative; color: white;left:0; " class="hidden-xs">
          <div >
            <div class="row" style="padding-left:10px;">
              <div class="col-xs-12 col-sm-offset-1 col-sm-10">
                <div style="height:20px;"></div>
              </div>
              <div class="col-xs-12 col-sm-offset-1 col-sm-10">
                <hr>
                <h2 style="font-weight: bold; text-shadow: 1px 1px #333;">Horários</h2>
              </div>
              <div class="col-xs-12 col-sm-offset-1 col-sm-10">
                <h4 style="font-weight: bold; text-shadow: 1px 1px #333;">Domingo - 9h</h4>
                <p style="text-shadow: 1px 1px #333;">Escola Bíblica Dominical</p>
              </div>
              <div class="col-xs-12 col-sm-offset-1 col-sm-10">
                <h4 style="font-weight: bold; text-shadow: 1px 1px #333;">Domingo - 19h30</h4>
                <p style="text-shadow: 1px 1px #333;">Culto de Celebração</p>
              </div>
              <div class="col-xs-12 col-sm-offset-1 col-sm-10">
                <h4 style="font-weight: bold; text-shadow: 1px 1px #333;">Quarta Feira - 19h30</h4>
                <p style="text-shadow: 1px 1px #333;">Estudo Bíblico</p>
                <hr>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox" style="height:100%; min-height: 448px;">
        {% set bannerCount = 1 %}
        {% for banner in banners if banner.is_mobile == 0 %}
          {% if bannerCount == 1 %}
            
            <a href="{{ banner.link }}" class="item active" style=' height:100%; background-image: url("{{ base_url() }}/{{ banner.image }}"); background-size:contain; background-repeat:no-repeat; background-position:top center;' >

            </a>  
            
          {% else %}
            <a href="{{ banner.link }}" class="item" style='height:100%; background-image: url("{{ base_url() }}/{{ banner.image }}"); background-size:contain; background-repeat:no-repeat; background-position:top center;' >
              
            </a>
            {% endif %}
          {% set bannerCount = bannerCount + 1 %}
        {% endfor %}
      </div>



      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev" style="background-image: none; z-index:300;">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true" style="top:75%; "></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next" style="background-image: none; z-index:300;">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"  style="top:75%; "></span>
        <span class="sr-only">Next</span>
      </a>
    </div>


    <div id="carousel-mobile" class="carousel slide visible-xs" data-ride="carousel" style="margin-top:22px;">

      <div style="position:absolute; left:0px; z-index:400;">
        <div class="visible-xs">
          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#horarioModal" style="
          border-color: rgba(204, 204, 204, 0.33);
          margin-top:3px;
          left:0px;
          margin-left:3px;">
          <span class="glyphicon glyphicon-time" style=" font-size: 20px;"></span>
          </button>
        </div>

        <div style="width:270px; height:71.5vh; position:relative; color: white;left:0; " class="hidden-xs">
          <div >
            <div class="row" style="padding-left:10px;">
              <div class="col-xs-12 col-sm-offset-1 col-sm-10">
                <div style="height:20px; c"></div>
              </div>
              <div class="col-xs-12 col-sm-offset-1 col-sm-10">
                <hr>
                <h2 style="font-weight: bold;:">Horários</h2>
              </div>
              <div class="col-xs-12 col-sm-offset-1 col-sm-10">
                <h4 style="font-weight: bold; color: ">Domingo - 9h</h4>
                <p style="">Escola Bíblica Dominical</p>
              </div>
              <div class="col-xs-12 col-sm-offset-1 col-sm-10">
                <h4 style="font-weight: bold; ">Domingo - 19h30</h4>
                <p style="">Culto de Celebração</p>
              </div>
              <div class="col-xs-12 col-sm-offset-1 col-sm-10">
                <h4 style="font-weight: bold; ">Quarta Feira - 19h30</h4>
                <p style="">Culto Bíblico</p>
                <hr>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        {% set bannerCount = 1 %}
        {% for banner in banners if banner.is_mobile == 1 %}
          {% if bannerCount == 1 %}
            <div class="item active" style="height:100%">
              <a href="{{ banner.link }}"><img src="{{ base_url() }}/{{ banner.image }}" style="max-height:100%; max-width:100vw; width:100vw; height:100%;"></a>

            </div>
          {% else %}
            <div class="item" style="height:100%">
              <a href="{{ banner.link }}"><img src="{{ base_url() }}/{{ banner.image }}" style="max-height:100%; max-width:100vw; width:100vw; height:100%;"></a>

            </div>
          {% endif %}
          {% set bannerCount = bannerCount + 1 %}
        {% endfor %}
      </div>



      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-mobile" role="button" data-slide="prev" style="background-image: none; z-index:300;">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true" style="top:75%; "></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-mobile" role="button" data-slide="next" style="background-image: none; z-index:300;">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"  style="top:75%; "></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="horarioModal" tabindex="-1" role="dialog" aria-labelledby="horarioModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="col-xs-10">
          <h2 class="modal-title" id="horarioModalLabel">Horários</h2>
        </div>
        <div class="col-xs-2">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        </div>

      </div>
      <div class="modal-body">
        <div class="row" style="padding-left:10px;">
          <div class="col-xs-12 col-sm-offset-1 col-sm-10">
            <div style="height:20px; color: #eee;"></div>
          </div>
          <div class="col-xs-12 col-sm-offset-1 col-sm-10">
            <hr>
            <h2 style="font-weight: bold; color: #555;">Horários</h2>
          </div>
          <div class="col-xs-12 col-sm-offset-1 col-sm-10">
            <h4 style="font-weight: bold; color: #555;">Domingo - 9h</h4>
            <p style="color: #555;">Escola Bíblica Dominical</p>
          </div>
          <div class="col-xs-12 col-sm-offset-1 col-sm-10">
            <h4 style="font-weight: bold; color: #555;">Domingo - 19h30</h4>
            <p style="color: #555;">Culto de Celebração</p>
          </div>
          <div class="col-xs-12 col-sm-offset-1 col-sm-10">
            <h4 style="font-weight: bold; color: #555;">Quarta Feira - 19h30</h4>
            <p style="color: #555;">Manancial - Culto de Oração</p>
            <hr>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>
{%- endblock %}
{% block javascripts %} {{ parent()}}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>
{% endblock %}

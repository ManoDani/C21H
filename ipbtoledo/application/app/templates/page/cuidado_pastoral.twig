{% extends "layout.twig" %}
{% set nav_active = 'cuidado_pastoral' %}
{% set header_type = 'index' %}
{% block content -%}
<div id="cuidado_pastoral" style="">

  <div id="banner-cuidado_pastoral">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6">
          <h1 class="" style="font-style:italic;     color: #353535; margin-top: 10px;">/ Cuidado Pastoral</h1>

        </div>
        <div class="col-xs-12">
          <ol class="breadcrumb">
            <li><a href="{{ base_url() }}">Início</a></li>
            <li class="active">Cuidado Pastoral</li>
          </ol>
        </div>

        {% if (tipo != 0) %}
          <div class="col-xs-12 col-sm-6">
            <div id="igreja-inner-menu">
              <!-- Static navbar -->
              <nav class="navbar ">
                <div id="cuidado_pastoral_menu" >
                  <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>


                  </div>

                  <div id="navbar-cuidado_pastoral" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right text-uppercase">
                      <li><a {{ tipo == 1 ? ' class="active"' }} href="{{ base_url() }}/cuidado_pastoral/pedido"><h3>Pedido de Oração</h3></a></li>
                      <li><a {{ tipo == 2 ? ' class="active"' }} href="{{ base_url() }}/cuidado_pastoral/aconselhamento"><h3>Aconselhamento</h3></a></li>


                    </ul>

                  </div><!--/.nav-collapse -->


                </div>
              </nav>
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>


  {% if (tipo == 0) %}
    <div id="cuidado_pastoral-content" style="margin-top:5px; ">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <div class="row">
              <div class="col-xs-12 col-sm-offset-1 col-sm-5">
                <a href="{{ base_url() }}/cuidado_pastoral/pedido" class="btn btn-default btn-lg" id="btn-pedido"><h1>Pedido de Oração</h1></a>
              </div>
              <div class="col-xs-12 col-sm-5">
                <a href="{{ base_url() }}/cuidado_pastoral/aconselhamento" class="btn btn-default btn-lg" id="btn-aconselhamento"><h1>Aconselhamento</h1></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {% endif %}


  {% if (tipo == 1) %}
    <div id="cuidado_pastoral-pedido" style="margin-top:0px;">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-offset-6 col-sm-6">
            <p style="text-align:justify;" class="h3">Utilize esse espaço para realizar o seu pedido de oração.</p>
            <hr>
          </div>
        </div>
        <div class="row">

          <div id="contato-container" class="col-xs-12 col-sm-offset-6 col-sm-6">
            <form action="{{ base_url() }}/cuidado_pastoral/outros" method="POST">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="nome">Nome</label>
                      <input type="nome" class="form-control" name="nome" id="nome" placeholder="Digite seu nome">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                        <label for="email">Email (opcional)</label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="Digite seu email">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                        <label for="telefone">Telefone (opcional)</label>
                        <input type="telefone" class="form-control" name="telefone" id="telefone" placeholder="Digite seu telefone">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="corpo-email">Descreva o seu pedido de oração</label>
                  <textarea id="corpo-email" name="corpo-email" class="form-control" rows="5"></textarea>
                </div>
                <button type="submit" class="btn btn-default" style="margin-bottom:10px;">Enviar</button>
              </form>
          </div>

        </div>
      </div>
    </div>

  {% endif %}

  {% if (tipo == 2) %}
        <div id="cuidado_pastoral-aconselhamento" style="margin-top:0px;">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-6">
            <p style="text-align:justify;" class="h3">Utilize este espaço para enviar seu pedido de aconselhamento espiritual.</p>
            <hr>
          </div>
        </div>
        <div class="row">

          <div id="contato-container" class="col-xs-12 col-sm-6">
            <form action="{{ base_url() }}/cuidado_pastoral/outros" method="POST">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="nome">Nome</label>
                      <input type="nome" class="form-control" name="nome" id="nome" placeholder="Digite seu nome">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                        <label for="email">Email (opcional)</label>
                        <input type="email" name="email" class="form-control" id="email" placeholder="Digite seu email">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                        <label for="telefone">Telefone (opcional)</label>
                        <input type="telefone" class="form-control" name="telefone" id="telefone" placeholder="Digite seu telefone">
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="corpo-email">Descreva o seu pedido de oração</label>
                  <textarea id="corpo-email" name="corpo-email" class="form-control" rows="5"></textarea>
                </div>
                <button type="submit" class="btn btn-default" style="margin-bottom:10px;">Enviar</button>
              </form>
          </div>

        </div>
      </div>
    </div>
  {% endif %}

</div>
{%- endblock %}
{% block javascripts %} {{ parent()}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.9/validator.min.js"></script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

{% endblock %}

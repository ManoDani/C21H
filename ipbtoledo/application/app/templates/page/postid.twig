{% extends "layout.twig" %}
{% set nav_active = 'midia' %}
{% set header_type = 'index' %}

{% block stylesheets -%}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <style>.embera-embed-responsive {
  position: relative;
  display: block;
  width: 100%;
  padding: 0;
  overflow: hidden;
  padding-bottom: 50%;
}

.embera-embed-responsive-item {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 0;
}</style>
{%- endblock %}

{% block content -%}
<style>.embera-embed-responsive {
  position: relative;
  display: block;
  width: 100%;
  padding: 0;
  overflow: hidden;
  padding-bottom: 50%;
}

.embera-embed-responsive-item {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 0;
}</style>
<div id="banner-midia" style="height:70px;">
  <div class="container">
      <div class="row">
        <div class="col-xs-7 col-sm-6">
          <h1 class="" style="    color: #353535; margin-top: 10px;">/ Mídias</h1>
        </div>

      </div>
    </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <ol class="breadcrumb" style="background-color: rgba(245, 245, 245, 0.58); margin-top: 2px;">
        <li><a href="{{ base_url() }}">Início</a></li>
        <li><a href="{{ base_url() }}/midia">Mídias</a></li>
        <li class="active">{{ post.titulo }}</li>

      </ol>
    </div>
  </div>
</div>

<div id="postid" style="margin-top:5px;  margin-bottom:3vh;">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12">
        {% if post.id_tipo_post == 1 %}
          <div class="row">
            <div class="col-xs-12 col-sm-4">
              <img class="img-responsive" src="{{ base_url() }}/{{ post.destaque }}" style="max-width:none;">
            </div>
            <div class="col-xs-12 col-sm-8">
              <p style="color:#888; padding:0px;">{{ post.data_alteracao }}</p>
              <h1 style="margin-top:5px;">{{ post.titulo }}</h1>
              <p>{{ post.descricao }}</p>
            </div>
          </div>
        {% endif %}

        {% if post.id_tipo_post == 2 %}
          <div class="row">
            <div class="col-xs-12 col-sm-offset-3 col-sm-6">
              <p style="color:#888; padding:0px;">{{ post.data_alteracao }}</p>
              <h1 style="margin-top:5px;">{{ post.titulo }}</h1>
              {% if post.embed_desktop %}
                <div class="hidden-xs">
                  {{ post.embed_desktop|raw }}
                </div>
              {% endif %}
              {% if post.embed_mobile %}
                <div class="visible-xs">
                  {{ post.embed_mobile|raw }}
                </div>
              {% endif %}

              <p>{{ post.descricao }}</p>
            </div>
          </div>

        {% endif %}
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">

            {% set i = 1 %}
            {% if post.id_tipo_post == 1 %}
              {% for postFile in postFiles  %}
                {% if i == 1 %}
                  <div class="item active">
                    <img src="{{ base_url() }}/{{ postFile.file }}" alt="...">
                    <div class="carousel-caption">

                    </div>
                  </div>
                  {% set i = 2 %}
                {% else %}
                  <div class="item">
                  <img src="{{ base_url() }}/{{ postFile.file }}" alt="...">
                  <div class="carousel-caption">

                  </div>
                </div>
                {% endif %}
              {% endfor %}
            {% endif %}

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

        </div>


      </div>

      <div class="col-xs-12 col-sm-6">
        {% if post.id_tipo_post == 1 %}
          {% for postFile in postFiles  %}
            <div class="col-xs-6 col-sm-4" style="padding-left:3px; padding-right:3px;">
              <div style="min-height: 155px;">
                <a href="#postFilemodal-{{ postFile.id }}" class="openModalPostFile-{{ postFile.id }} " style="width: 100%; display:block;"><img src="{{ base_url() }}/{{ postFile.file }}" class="grid-modal" style=" max-width: 100%; height: auto; border-width:0px; display:block; margin: 0 auto;"></a>
              </div>

            </div>

          {% endfor  %}
        {% endif  %}
      </div>
    </div>


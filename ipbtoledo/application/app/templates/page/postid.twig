    </div>
  </div>
</div>

{% if post.id_tipo_post == 1 %}
  {% for postFile in postFiles  %}
    <div id="postFilemodal-{{ postFile.id }}" class="modal">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <img src="{{ base_url() }}/{{ postFile.file }}/">
          </div>
        </div>
      </div>
    </div>
  {% endfor  %}
{% endif  %}

<script type="text/javascript">
  {% if post.id_tipo_post == 1 %}
    {% for postFile in postFiles  %}
      $(".openModalPostFile-{{ postFile.id }}").click(function() {
        $("#postFilemodal-{{ postFile.id }}").modal("show");
        console.log("click test");
      });
    {% endfor  %}
  {% endif  %}
</script>
